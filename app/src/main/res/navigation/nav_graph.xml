<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.depromeet.fragraph.feature.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splashFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.depromeet.fragraph.feature.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.depromeet.fragraph.feature.report.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report">

        <action
            android:id="@+id/action_reportFragment_to_feelingSelectFragment"
            app:destination="@id/feelingSelectFragment" />
    </fragment>

    <fragment
        android:id="@+id/feelingSelectFragment"
        android:name="com.depromeet.fragraph.feature.recommendation.feeling_select.FeelingSelectFragment"
        android:label="fragment_feeling_select"
        tools:layout="@layout/fragment_feeling_select" />
</navigation>