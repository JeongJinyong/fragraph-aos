<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="history"
            type="com.depromeet.fragraph.domain.model.History" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_history_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/sample_history_background"
            />

        <TextView
            android:id="@+id/tv_history_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(history.day)}"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/space_x_large"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="thu_2020"/>

        <TextView
            android:id="@+id/tv_history_incense_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{history.incense.title}"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_day"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="Lavendar"/>

        <TextView
            android:id="@+id/tv_history_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{history.memo.content}"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textColor="#212121"
            android:lineSpacingExtra="7sp"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="오늘 너무 힘든 하루"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>