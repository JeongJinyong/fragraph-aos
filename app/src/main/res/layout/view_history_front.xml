<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="history"
            type="com.depromeet.fragraph.feature.report.model.HistoryUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_history_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/sample_history_background"
            />

        <TextView
            android:id="@+id/tv_history_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(history.day)}"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/space_x_large"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="thu_2020"/>

        <TextView
            android:id="@+id/tv_history_incense_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{history.incense.title}"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_day"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="Lavendar"/>

        <TextView
            android:id="@+id/tv_history_feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="피곤한 오늘"
            android:textSize="24sp"
            android:textColor="#212121"
            android:layout_marginTop="48dp"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_day"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="피곤한 오늘"/>

        <TextView
            android:id="@+id/tv_history_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(history.playTime)}"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textColor="#212121"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_feeling"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="15분간"/>

        <TextView
            android:id="@+id/tv_history_playtime_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="향상 했습니다."
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textColor="#212121"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_playtime"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            tools:text="향상 했습니다."/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_history_incense"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_history_playtime_end"/>

        <View
            android:id="@+id/view_tag_top"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="@dimen/space_s_large"
            android:layout_marginEnd="@dimen/space_s_large"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_history_incense"
            />

        <TextView
            android:id="@+id/tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:textColor="#212121"
            android:layout_marginTop="@dimen/space_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_tag_top"
            tools:text="태그자리.. 어떻게 될지??"/>

        <View
            android:id="@+id/view_tag_bottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_small"
            android:layout_marginStart="@dimen/space_s_large"
            android:layout_marginEnd="@dimen/space_s_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag_1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>