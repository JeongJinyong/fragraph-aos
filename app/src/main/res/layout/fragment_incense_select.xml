<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.recommendation.incense_select.IncenseSelectFragment">

    <data>
        <variable
            name="vm"
            type="com.depromeet.fragraph.feature.recommendation.incense_select.viewmodel.IncenseSelectViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_feeling_title"
            android:text="오늘의 향을 추천드려요."
            android:textSize="24sp"
            android:textColor="#1C1C1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            />

        <TextView
            android:id="@+id/tv_feeling_description"
            android:text="원하는 향을 한가지 선택하세요."
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_x_small"
            android:layout_marginStart="@dimen/space_x_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feeling_title"
            app:layout_constraintHorizontal_bias="0"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_incenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feeling_description"
            app:layout_constraintVertical_bias="0"
            app:bind_items="@{vm.incenses}"/>

        <Button
            android:id="@+id/btn_time_select"
            android:text="@{String.valueOf(vm.playtime)}"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@drawable/btn_keyword_non_selected"
            app:layout_constraintEnd_toStartOf="@+id/btn_start_meditation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_incenses"
            app:layout_constraintHorizontal_bias="0"
            tools:text="300"
            />

        <Button
            android:id="@+id/btn_start_meditation"
            android:text="시작하기"
            android:textSize="18sp"
            android:textColor="#FCFCFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="#212121"
            android:onClick="@{() -> vm.onMeditationStart()}"
            app:layout_constraintStart_toEndOf="@+id/btn_time_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_incenses"
            app:layout_constraintHorizontal_bias="1"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>